<!--pages/index/index.wxml-->
<view class='index-wrapper'>
  <!-- 轮播图 -->
  <view class='banner'>
    <swiper indicator-dots="true" interval="3000" duration="500" circular="true" autoplay="true">
      <block wx:for="{{list.banner}}" wx:key="{{index}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" mode="widthFix"/>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <!-- 商品 -->
  <view class='goods'>
    <!-- 商品菜单 -->
    <scroll-view class='menu' scroll-y="true" scroll-with-animation="true" scroll-into-view="{{activeMenuItem}}">
      <view wx:for="{{list.goods}}" wx:key="{{index}}" 
        id="menu-item{{index}}" class="menu-item {{activeMenuItem == 'menu-item'+index ? 'active' : ''}}"
        data-relatedListItem="list-item{{index}}" 
        bindtap='toggleActiveMenu'
      >
        {{item.name}}
      </view>
    </scroll-view>
    <!-- 商品列表 -->
    <scroll-view class='list' scroll-y="true" scroll-with-animation="true" scroll-into-view="{{activeListItem}}" 
      bindscroll="scrollingList"
    >
      <view class='list-item' wx:for="{{list.goods}}" wx:key="{{index}}" id="list-item{{index}}"
        data-index="{{index}}" bindtap="goDetails1"
      >
        <view class='category'>
          #{{index}} {{item.name}}
        </view>
        <view class='good' wx:for="{{item.list}}" wx:key="{{index}}"
          data-index="{{index}}" bindtap="goDetails0"
        >
          <view class='cover'>
            <image src='{{item.cover}}' mode="widthFix"></image>
          </view>
          <view class='info'>
            <view class='name'>
              {{item.name}}
            </view>
            <view class='price'>
              ￥{{item.price}}
            </view>
          </view>
        </view>
        <view class='good' wx:for="{{item.list}}" wx:key="{{index}}"
          data-index="{{index}}" bindtap="goDetails0"
        >
          <view class='cover'>
            <image src='{{item.cover}}' mode="widthFix"></image>
          </view>
          <view class='info'>
            <view class='name'>
              {{item.name}}
            </view>
            <view class='price'>
              ￥{{item.price}}
            </view>
          </view>
        </view>        
      </view>
    </scroll-view>
  </view>














































</view>