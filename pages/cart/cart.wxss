/* pages/cart/cart.wxss */

/* 列表 */
.cart-wrapper .list{
  padding-bottom: 40px;
}

.cart-wrapper .list .item{
  box-sizing: border-box;
  height: 120px;
  padding: 10px;
  display: flex;
  align-items: center;
}

.cart-wrapper .list .item .checkbox{
  flex: 1;
}

.cart-wrapper .list .item .pic{
  flex: 2;
  margin-right: 10px;
  height: 100px;
  overflow: hidden;
}

.cart-wrapper .list .item .pic image{
  display: block;
  margin: 0 auto;
  width: 100%;
}

.cart-wrapper .list .item .info{
  flex: 7;
  height: 100%;
  position: relative;
}

.cart-wrapper .list .item .info .name{
  font-weight: bold;
}

.cart-wrapper .list .item .info .price{
  position: absolute;
  bottom: 0;
  color: tomato;
}

.cart-wrapper .list .item .info .count{
  position: absolute;
  bottom: 0;
  right: 5px;
}

/* 选项菜单 */
.cart-wrapper .menu{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1;
  background-color: #fff;
  height: 40px;
  display: flex;
  border-top: 1px solid #d1d1d1;
  box-sizing: border-box;
}

.cart-wrapper .menu .checkbox{
  flex: 2;
  height: 40px;
  padding-left: 10px;
  display: flex;
  align-items: center;
  font-size: 12px;
}

.cart-wrapper .menu .total{
  flex: 5;
  height: 40px;
  line-height: 40px;
  text-align: right;
  padding-right: 10px;
  font-size: 12px;
}

.cart-wrapper .menu .pay{
  flex: 3;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: #1296db;
  color: #fff;
  font-size: 12px;
  font-weight: bold;
}